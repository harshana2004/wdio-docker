// Declarative pipeline 
pipeline {
 agent any
  stages {
  stage('Build image') {
      steps {
        script {
                sh "docker build . -t 'my-testing'"
               }
            }
        }
     }  
   stage('Execute Tests') {
      steps {
        script {
                sh "docker run -v '$(pwd)/output:/workdir/output' 'my-testing'"
        }
      }
    }     
}